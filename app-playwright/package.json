		"test:run": "playwright test",
		"test:dev": "MODE=development playwright test --grep-invert @prod"
	},
	"devDependencies": {
		"@playwright/test": "1.49.0-alpha-2024-11-09",
		"@types/node": "20.14.11",
		"config": "workspace:*",
		"dotenv": "^16.3.1",
		"eslint": "^8.57.0",
		"prettier": "^3.3.3"
	},
	"dependencies": {
		"@scure/base": "^1.1.1",
		"app": "workspace:*",
		"fast-check": "^3.13.1",
		"id128": "^1.6.6",
		"lodash-es": "^4.17.21",
		"shared": "workspace:*",
		"solid-js": "^1.8.18"
	}
}
