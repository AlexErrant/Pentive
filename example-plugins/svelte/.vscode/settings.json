{
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.formatOnSave": true,
	"eslint.validate": ["javascript", "typescript"],
	"css.validate": false,
	"typescript.tsdk": "./node_modules/typescript/lib",
	"files.exclude": {
		"**/.DS_Store": true,
		"**/.git": true,
		"**/node_modules": true,
		"pnpm-lock.yaml": true
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	}
}
