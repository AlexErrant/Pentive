{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"noErrorTruncation": true,
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"incremental": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"types": [], // https://github.com/microsoft/TypeScript/wiki/Performance#controlling-types-inclusion
		"outDir": "${configDir}/lib"
	},
	"exclude": [
		"${configDir}/node_modules",
		"${configDir}/dist",
		"${configDir}/lib",
		"${configDir}/.*/"
	]
}
