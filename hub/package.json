{
	"name": "hub",
	"scripts": {
		"dev": "vinxi dev --port=3014",
		"buildDev": "cp ./.env.development ./.env.production.local && vinxi build         # Build with dev envvars",
		"build": "rm -f ./.env.production.local && vinxi build         # Build with prod envvars",
		"start": "vinxi start",
		"preview": "wrangler pages dev dist/ --https-cert-path ./.cert/cert.pem --https-key-path ./.cert/key.pem",
		"deploy": "wrangler pages deploy dist/",
		"tsc-build": "tsc",
		"eslint": "eslint . --max-warnings 0",
		"eslint:fix": "eslint . --fix --max-warnings 0",
		"format:check": "prettier --ignore-path .gitignore --check .",
		"format": "prettier --ignore-path .gitignore --write .",
		"stylelint": "stylelint **/*.css",
		"stylelint:write": "stylelint **/*.css --fix"
	},
	"type": "module",
	"sideEffects": false,
	"main": "./dist/index.js",
	"devDependencies": {
		"@cloudflare/kv-asset-handler": "^0.3.0",
		"@cloudflare/workers-types": "^4.20250303.0",
		"@lezer/lr": "^1.4.2 || See comment on html-to-text",
		"@tailwindcss/forms": "^0.5.7",
		"@thisbeyond/solid-select": "^0.14.0 || See comment on html-to-text",
		"autoprefixer": "^10.4.16",
		"config": "workspace:*",
		"html-to-text": "^9.0.5 || Hub doesn't use this, but `shared-edge` (actually `cwa`) does. Not including this causes an ESModule error in dev - I've no idea why.",
		"solid-toast": "^0.5.0 || See comment on html-to-text",
		"stylelint": "^15.10.3",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-standard": "^34.0.0",
		"tailwindcss": "^3.4.3",
		"typescript": "~5.7.3",
		"vite": "^6.2.0",
		"wrangler": "^3.112.0"
	},
	"dependencies": {
		"@codemirror/autocomplete": "^6.18.0",
		"@codemirror/commands": "^6.6.0",
		"@codemirror/lang-html": "^6.4.9",
		"@codemirror/language": "^6.10.2",
		"@codemirror/lint": "^6.8.1",
		"@codemirror/search": "^6.5.6",
		"@codemirror/state": "^6.4.1",
		"@codemirror/view": "^6.33.0",
		"@github/relative-time-element": "^4.3.0",
		"@iframe-resizer/parent": "^5.3.2",
		"@kobalte/core": "^0.13.8",
		"@kobalte/tailwindcss": "^0.9.0",
		"@scure/base": "^1.2.4",
		"@solidjs/meta": "^0.29.4",
		"@solidjs/router": "^0.15.3",
		"@solidjs/start": "^1.1.3",
		"@tanstack/solid-query": "^5.67.1",
		"@tanstack/solid-query-devtools": "^5.67.1",
		"@tanstack/solid-table": "^8.21.2",
		"@trpc/client": "^10.38.5",
		"@trpc/server": "^10.38.5",
		"app": "workspace:*",
		"comlink": "^4.4.1",
		"cookie-es": "^1.2.2",
		"cwa": "workspace:*",
		"jose": "^5.6.3",
		"nightwind": "^1.1.13",
		"oauth4webapi": "^2.3.0",
		"shared": "workspace:*",
		"shared-dom": "workspace:*",
		"shared-edge": "workspace:*",
		"solid-js": "^1.9.5",
		"superjson": "^1.13.3",
		"undici": ">=5.26.2",
		"vinxi": "^0.5.3"
	},
	"engines": {
		"node": ">=18"
	}
}
