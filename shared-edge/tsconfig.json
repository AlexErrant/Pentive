{
	"extends": "../tsconfig.options.json",
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"types": ["@cloudflare/workers-types"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"composite": true,
		"declaration": true,
		"outDir": "lib",
		"lib": ["ES2022"]
	},
	"references": [
		{
			"path": "../shared"
		}
	],
	"include": ["src/**/*"]
}
