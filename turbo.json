{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "tsc-build": {
      "dependsOn": ["^tsc-build"],
      "outputs": ["lib/**"]
    },
    "eslint": {
      "dependsOn": ["^tsc-build"]
    },
    "build": {
      "dependsOn": ["^tsc-build"],
      "outputs": ["dist/**", ".vinxi/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development",
        ".env.production",
        ".env.production.local",
        ".env"
      ]
    }
  }
}
