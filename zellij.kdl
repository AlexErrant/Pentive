layout {
    pane split_direction="vertical" {
        pane split_direction="horizontal" {
            pane {
              name "hub"
              cwd "hub"
              command "pnpm"
              args "dev"
            }
            pane {
              name "app"
              cwd "app"
              command "pnpm"
              args "dev"
              close_on_exit false
            }
            pane {
              name "tsc"
              command "pnpm"
              args "tsc-watch"
            }
        }
        pane split_direction="horizontal" {
            pane borderless=true {
              name "ugc"
              command "bash"
              args "-c" "npx concurrently --kill-others -p \"[{name}]\" -n \"app-ugc,hub-ugc,turso\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"pnpm --filter app-ugc build --mode development && pnpm --filter app-ugc preview\" \"pnpm --filter hub-ugc build --mode development && pnpm --filter hub-ugc preview\" \"pnpm turso\""
            }
            pane {
              name "api-ugc"
              cwd "api-ugc"
              command "pnpm"
              args "dev" "--show-interactive-dev-session" "false"
            }
            pane split_direction="vertical" {
                pane {
                  name "peer"
                  cwd "peer"
                  command "pnpm"
                  args "dev"
                }
                pane {
                  name "generateSql"
                  cwd "shared"
                  command "pnpm"
                  args "generateSql"
                }
            }
            pane {
              name "cwa"
              cwd "cwa"
              command "pnpm"
              args "dev" "--show-interactive-dev-session" "false"
            }
        }
    }
    pane size=2 borderless=true {
        plugin location="zellij:status-bar"
    }
}
