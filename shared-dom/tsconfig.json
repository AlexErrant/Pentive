{
	"extends": "../tsconfig.options.json",
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"composite": true,
		"declaration": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"outDir": "lib",
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/**/*", "*.ts"]
}
